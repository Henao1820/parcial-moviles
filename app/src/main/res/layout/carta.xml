<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menus"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/product1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5">


        <ImageView
            android:id="@+id/burgerImage1"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/menu1" />

        <TextView
            android:id="@+id/burgerName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="cursive"
            android:text="Exotic"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/burgerPrice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $25.000"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buyButton1"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Buy Now"
            android:textColor="@color/white" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/product2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@id/product1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5">


        <ImageView
            android:id="@+id/burgerImage2"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/menu1" />

        <TextView
            android:id="@+id/burgerName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="cursive"
            android:text="Apanada"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/burgerPrice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $30.000"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buyButton2"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Buy Now"
            android:textColor="@color/white" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/product3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product1"
        app:layout_constraintWidth_percent="0.5">


        <ImageView
            android:id="@+id/burgerImage3"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/menu1" />

        <TextView
            android:id="@+id/burgerName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="cursive"
            android:text="Bacon Burger"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/burgerPrice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $32.000"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buyButton3"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Buy Now"
            android:textColor="@color/white" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/product4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@id/product3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product2"
        app:layout_constraintWidth_percent="0.5">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/menu1" />

        <TextView
            android:id="@+id/burgerName4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="cursive"
            android:text="Veggie Burger"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/burgerPrice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $18.000"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buyButton4"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Buy Now"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
